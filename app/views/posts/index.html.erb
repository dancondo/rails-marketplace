<div class="container-fluid">
  <div class="row graphique-container">
    <div class="graphique">
      <%= image_tag "graphique-bitcoin.png", alt: "graphique", width: 300 %>
      <div class="title-crypto">BTC/R$ : <%= @currencies %></div>
    </div>
    <div class="graphique">
      <%= image_tag "graphique-ethereum.png", alt: "graphique", width: 300 %>
      <div class="title-crypto">ETH/R$ : <%= @currencies %></div>
    </div>
    <div class="graphique">
      <%= image_tag "graphique-ripple.png", alt: "graphique", width: 300 %>
      <div class="title-crypto">XRP/R$ : <%= @currencies %></div>
    </div>
    <div class="graphique">
      <div class="graphique-dash">
        <%= image_tag "graphique-dash.png", alt: "graphique", width: 300 %>
        <div class="title-crypto">Dash/R$ : <%= @currencies %> </div>
      </div>
    </div>
    <div class="graphique">
      <%= image_tag "graphique-litecoin.png", alt: "graphique", width: 300 %>
      <div class="title-crypto">LTC/R$ : <%= @currencies %></div>
    </div>
  </div>
</div>

<div class="container" id="container-posts-index">
  <h1>Ofertas ativas:</h1>

  <table class="table table-hover">
    <thead>

      <tr>
        <th scope="col">#</th>
        <th scope="col">Usuário</th>
        <th scope="col">Coin</th>
        <th scope="col">Quantidade</th>
        <th scope="col">Preço</th>
        <th scope="col">Cotação Cobrada</th>
        <th></th>

      </tr>
    </thead>
    <tbody>
      <% @posts.each_with_index do |post, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= post.user.username %></td>
          <td><%= post.currency.name %></td>
          <td><%= post.amount %></td>

          <td><%= post.price %></td>
          <td><%= post.price / post.amount %></td>
          <td><%= link_to 'Comprar', post, class: "btn btn-basic btn-comprar" %></td>

        </tr>
      <% end %>
    </tbody>
  </table>

</div>
